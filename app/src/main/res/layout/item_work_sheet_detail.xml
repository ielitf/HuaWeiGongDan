<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_view"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
         >

        <TextView
            android:id="@+id/item_sheet_id"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="132464685"
            android:textSize="14dp"
            android:textColor="@color/item_title_color"
             />
        <TextView
            android:id="@+id/item_sheet_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="待结单"
            android:textSize="14dp"
            android:textColor="@color/main_nav_text"
             />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        >

        <TextView
            android:id="@+id/item_sheet_shop_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="测试一号店"
            android:textSize="14dp"
            android:textColor="@color/item_title_color"
            />
        <TextView
            android:id="@+id/item_sheet_equ"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/item_sheet_shop_name"
            android:layout_toLeftOf="@+id/item_sheet_star"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="空调"
            android:textSize="14dp"
            android:textColor="@color/item_title_color"
            />

        <!--

        style="?android:attr/ratingBarStyleSmall"
        style="?android:attr/ratingBarStyle"
        style="?android:attr/ratingBarStyleIndicator"
        -->
        <RatingBar
            android:id="@+id/item_sheet_star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            style="?android:attr/ratingBarStyleSmall"
            android:isIndicator="true"
            android:progressTint="@color/num_back_color"
            android:numStars="3"
            android:rating="1"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/item_sheet_worker_name"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="闫邵博"
            android:textSize="14dp"
            android:textColor="@color/item_title_color"
            />
        <TextView
            android:id="@+id/item_sheet_tel"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content"
            android:text="15093249729"
            android:textColor="@color/item_title_color"
            android:textSize="14dp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/item_sheet_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2019/4/27 09:12"
            android:textSize="10dp"
            />
        <TextView
            android:id="@+id/item_sheet_state2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="报修"
            android:textSize="10dp"
            />
    </LinearLayout>
</LinearLayout>